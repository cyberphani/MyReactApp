{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "noImplicitAny": false,
    "rootDir": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths" : {
      "app/*" : [
        "modules/app/*"
      ],
      "employee/*" : [
        "modules/employee/*"
      ],
      "department/*" : [
        "modules/department/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}